{
    "manifest_version": 3,
    "name": "Tab-Tag",
    "description": "vue3版本的Edge插件",
    "version": "1.0.0",
    "action": {
     "default_title": "Tab-Tag",
     "default_icon": "assets/icon.png",
     "default_popup": "popup.html"
    },
    "permissions": [
        "contextMenus"
    ],
    "background": {
     "service_worker": "js/background.js"
    },
    "icons": {
     "16": "assets/icon.png"
    },
    "content_scripts": [
     {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["css/popup.css"],
      "js": ["js/inject.js"],
      "run_at": "document_idle"
     }
    ]
   }