{
    "manifest_version": 3,
    "name": "Tab-Tag",
    "description": "用tag管理你的标签页",
    "version": "1.0.0",
    "action": {
     "default_title": "Tab-Tag",
     "default_icon": "assets/icon.png",
     "default_popup": "popup.html"
    },
    "permissions": [
        "contextMenus",
        "tabs",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
     "service_worker": "js/main.js"
    },
    "icons": {
     "16": "assets/icon.png"
    },
    "content_scripts": [
     {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["css/popup.css"],
      "js": ["js/inject.js"],
      "run_at": "document_idle"
     }
    ]
   }