{
    "manifest_version": 3,
    "name": "Tab-Tag",
    "description": "vue3版本的Edge插件",
    "version": "1.0.0",
    "browser_action": {
     "default_title": "Tab-Tag",
     "default_icon": "assets/icon.png",
     "default_popup": "popup.html"
    },
    "permissions": [],
    "background": {
     "scripts": ["js/background.js"]
    },
    "icons": {
     "16": "assets/icon.png",
    },
    "content_scripts": [
     {
      "matches": ["http://*/*", "https://*/*"],
      "css": [],
         "js": [],
      "run_at": "document_idle"
     }
    ],
    "web_accessible_resources": ["js/inject.js"]
   }